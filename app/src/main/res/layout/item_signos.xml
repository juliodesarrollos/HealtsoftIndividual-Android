<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layoutSignos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_ritmo_cardiaco"/>
                <TextView
                    android:id="@+id/txtFecha"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:textSize="18dp"
                    android:text="25/12/2019"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginBottom="3dp"
                        android:padding="3dp"
                        android:background="@drawable/contorno_gris"
                        android:textSize="12dp"
                        android:textAlignment="center"
                        android:paddingLeft="5dp"
                        android:id="@+id/txtPulso"
                        android:text="80 BPM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginBottom="3dp"
                        android:padding="3dp"
                        android:background="@drawable/contorno_gris"
                        android:textSize="12dp"
                        android:textAlignment="center"
                        android:paddingLeft="5dp"
                        android:id="@+id/txtFr"
                        android:text="20 RPM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:padding="3dp"
                        android:background="@drawable/contorno_gris"
                        android:textSize="12dp"
                        android:textAlignment="center"
                        android:paddingLeft="5dp"
                        android:id="@+id/txtGlucosa"
                        android:text="92% O2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginBottom="3dp"
                        android:padding="3dp"
                        android:background="@drawable/contorno_gris"
                        android:textSize="12dp"
                        android:textAlignment="center"
                        android:paddingLeft="5dp"
                        android:id="@+id/txtTemperatura"
                        android:text="36Â°C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:padding="3dp"
                        android:background="@drawable/contorno_gris"
                        android:textSize="12dp"
                        android:textAlignment="center"
                        android:paddingLeft="5dp"
                        android:id="@+id/txtPresion"
                        android:text="120/80"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:background="@color/gray_btn_bg_color"
                android:layout_height="1dp">
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>