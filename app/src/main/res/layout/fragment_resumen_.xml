<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Paciente.Fragment_Resumen_Paciente">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layoutResumenPx"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="@dimen/common_15_dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutDx">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_estetoscopio"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="18dp"
                        android:text="Diagnosticos"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".5">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medico"/>
                        <TextView
                            android:layout_marginRight="1dp"
                            android:padding="3dp"
                            android:background="@drawable/contorno_gris"
                            android:inputType="textMultiLine"
                            android:textSize="12dp"
                            android:id="@+id/txtDxMedico"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Diagnostico medico"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".5">
                        <TextView
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fisioterapeutico"/>
                        <TextView
                            android:layout_marginLeft="1dp"
                            android:padding="3dp"
                            android:background="@drawable/contorno_gris"
                            android:inputType="textMultiLine"
                            android:id="@+id/txtDxFisio"
                            android:textSize="12dp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Diagnostico fisioterapeutico"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:background="@color/gray_btn_bg_color"
                    android:layout_height="1dp">
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutTto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_fisioterapia"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="18dp"
                        android:text="Tratamiento"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:padding="3dp"
                    android:background="@drawable/contorno_gris"
                    android:autoSizeTextType="uniform"
                    android:inputType="textMultiLine"
                    android:textSize="12dp"
                    android:id="@+id/txtTto"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TTo medico"/>
                <LinearLayout
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:background="@color/gray_btn_bg_color"
                    android:layout_height="1dp">
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutOtros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_historia_clinica"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="18dp"
                        android:text="Otros datos"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_marginBottom="3dp"
                    android:padding="3dp"
                    android:background="@drawable/contorno_gris"
                    android:autoSizeTextType="uniform"
                    android:inputType="textMultiLine"
                    android:textSize="12dp"
                    android:id="@+id/txtMotivoConsulta"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Otros medico"/>
                <TextView
                    android:padding="3dp"
                    android:background="@drawable/contorno_gris"
                    android:textSize="12dp"
                    android:autoSizeTextType="uniform"
                    android:inputType="textMultiLine"
                    android:id="@+id/txtCausaMolestia"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Otros medico"/>
                <LinearLayout
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:background="@color/gray_btn_bg_color"
                    android:layout_height="1dp">
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSignos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_ritmo_cardiaco"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="18dp"
                        android:text="Signos Vitales"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginBottom="3dp"
                            android:padding="3dp"
                            android:background="@drawable/contorno_gris"
                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:paddingLeft="5dp"
                            android:id="@+id/txtPulso"
                            android:text="80 BPM"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginBottom="3dp"
                            android:padding="3dp"
                            android:background="@drawable/contorno_gris"
                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:paddingLeft="5dp"
                            android:id="@+id/txtFr"
                            android:text="20 RPM"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:padding="3dp"
                            android:background="@drawable/contorno_gris"
                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:paddingLeft="5dp"
                            android:id="@+id/txtGlucosa"
                            android:text="92% O2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginBottom="3dp"
                            android:padding="3dp"
                            android:background="@drawable/contorno_gris"
                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:paddingLeft="5dp"
                            android:id="@+id/txtTemperatura"
                            android:text="36°C"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:padding="3dp"
                            android:background="@drawable/contorno_gris"
                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:paddingLeft="5dp"
                            android:id="@+id/txtPresion"
                            android:text="120/80"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:background="@color/gray_btn_bg_color"
                    android:layout_height="1dp">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layoutNotas"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_notas"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="18dp"
                        android:text="Notas médicas"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginBottom="3dp"
                        android:padding="3dp"
                        android:layout_weight=".75"
                        android:background="@drawable/contorno_gris"
                        android:textSize="12dp"
                        android:textAlignment="center"
                        android:id="@+id/txtFecha1"
                        android:text="27/01/2020"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_marginLeft="3dp"
                        android:layout_marginBottom="3dp"
                        android:padding="3dp"
                        android:maxLines="5"
                        android:layout_weight=".25"
                        android:background="@drawable/contorno_gris"
                        android:textSize="12dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/txtNota1"
                        android:text="80 BPM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginBottom="3dp"
                        android:padding="3dp"
                        android:layout_weight=".75"
                        android:background="@drawable/contorno_gris"
                        android:textSize="12dp"
                        android:textAlignment="center"
                        android:id="@+id/txtFecha2"
                        android:text="27/01/2020"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_weight=".25"
                        android:layout_marginLeft="3dp"
                        android:layout_marginBottom="3dp"
                        android:padding="3dp"
                        android:background="@drawable/contorno_gris"
                        android:textSize="12dp"
                        android:maxLines="5"
                        android:paddingLeft="5dp"
                        android:id="@+id/txtNota2"
                        android:text="20 RPM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginBottom="3dp"
                        android:padding="3dp"
                        android:layout_weight=".75"
                        android:background="@drawable/contorno_gris"
                        android:textSize="12dp"
                        android:textAlignment="center"
                        android:id="@+id/txtFecha3"
                        android:text="27/01/2020"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_weight=".25"
                        android:layout_marginLeft="3dp"
                        android:padding="3dp"
                        android:background="@drawable/contorno_gris"
                        android:textSize="12dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/txtNota3"
                        android:maxLines="5"
                        android:text="92 %"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>