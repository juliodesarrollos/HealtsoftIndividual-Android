<?xml version="1.0" encoding="utf-8"?>
<com.github.tibolte.agendacalendarview.agenda.AgendaEventView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- Description -->
    <LinearLayout
        android:id="@+id/view_agenda_event_description_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/view_agenda_event_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Titulo aqui"
                android:textColor="@color/white"
                android:textSize="14dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:id="@+id/imgPaciente"
                android:layout_height="20dp"
                android:tint="@color/white"
                android:src="@drawable/ic_paciente"/>
            <TextView
                android:text="Descripcion aqui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtEventPaciente"
                android:textColor="@color/white"
                android:textSize="14dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginRight="10dp"
                android:id="@+id/imgTerapeuta"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_terapeuta"/>

            <TextView
                android:text="Descripcion aqui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtEventDoctor"
                android:textColor="@color/white"
                android:textSize="14dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_agenda_event_location_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgLocation"
                android:layout_width="wrap_content"
                android:layout_height="11dp"
                android:src="@drawable/img_location"/>

            <TextView
                android:id="@+id/view_agenda_event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugar aqui"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="11dp"/>

            <LinearLayout
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:id="@+id/imgHora"
                    android:layout_marginRight="5dp"
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_hora"/>
                <TextView
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:id="@+id/view_agenda_event_hora"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Hora aqui"
                    android:textColor="@color/white"
                    android:textSize="11dp"/>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</com.github.tibolte.agendacalendarview.agenda.AgendaEventView>